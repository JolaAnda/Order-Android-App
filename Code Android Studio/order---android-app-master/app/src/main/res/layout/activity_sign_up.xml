<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">


    <ImageView
        android:id="@+id/logoWhite"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_weiss"
        android:gravity="center_horizontal|top"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Sign Up"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />



    <LinearLayout
        android:id="@+id/Data"
        android:layout_width="315dp"
        android:layout_height="380dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/login"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="60dp"
            >

            <TextView
                android:id="@+id/surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/raleway_light"
                android:text="Surname"
                android:textSize="12dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="90dp"
                android:fontFamily="@font/raleway_light"
                android:text="Lastname"
                android:textSize="12dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/surnameField"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/raleway_light"
                android:textColor="@android:color/black" />


            <EditText
                android:id="@+id/lastnameField"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/raleway_light"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/surname"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/raleway_light"
                android:text="Email"
                android:textSize="12dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/emailField"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/surnameField"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/raleway_light"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/email"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/raleway_light"
                android:text="Password"
                android:textSize="12dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/emailField"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/raleway_light"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/confirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/password"
                android:layout_marginTop="195dp"
                android:fontFamily="@font/raleway_light"
                android:text="Confirm Password"
                android:textSize="12dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/confirmField"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/passwordField"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/raleway_light"
                android:textColor="@android:color/black" />



        </RelativeLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:background="@drawable/rounded_rectangle_login"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>






    <LinearLayout
        android:id="@+id/loginText"
        android:layout_width="290dp"
        android:layout_height="120dp"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/accountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_light"
            android:text="Already have an account:"
            android:textSize="12dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_light"
            android:text="LOGIN HERE"
            android:textSize="13dp"
            android:textColor="@color/colorAccent" />


    </LinearLayout>







</LinearLayout>