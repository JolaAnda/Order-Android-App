<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkoutPayment.PaymentDetails"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white_rectangle"
        android:layout_centerInParent="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/check_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thank_you"
            android:text="Thank you for ordering with ORDER"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/check_icon"
            android:textAlignment="center"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/textColor"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/processed"
            android:text="Your order is being processed."
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/thank_you"
            android:fontFamily="@font/raleway"
            android:textColor="@color/textColorGrey"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="It will take about 10 minutes."
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/processed"
            android:fontFamily="@font/raleway"
            android:textColor="@color/textColorGrey"
            android:textSize="16dp"
            android:layout_marginTop="3dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="130dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount"
                    android:layout_centerHorizontal="true"
                    android:text="Purchased Amount: "
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/raleway_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAmount"
                    android:layout_centerHorizontal="true"
                    android:text="10"
                    android:layout_below="@id/textId"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/roboto_regular"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dollar"
                    android:layout_centerHorizontal="true"
                    android:text="$"
                    android:layout_below="@id/textId"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/roboto_regular"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"
                    android:layout_centerHorizontal="true"
                    android:text="Status: "
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/raleway_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStatus"
                    android:layout_centerHorizontal="true"
                    android:text="approved"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/raleway_medium"
                    android:layout_marginLeft="5dp"
                    />


            </LinearLayout>






        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Finish"
            android:id="@+id/finishButton"
            android:fontFamily="@font/raleway_bold"
            android:background="@drawable/rounded_rect_pay"
            android:textColor="@color/textColor"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>


</RelativeLayout>